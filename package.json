{
  "name": "enhanced-mcp-slack-sdk",
  "version": "2.0.0",
  "description": "Enhanced MCP Slack SDK v2.0.0 - Production-ready Slack integration with comprehensive toolset",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --config tests/config/jest.config.ts",
    "test:unit": "jest --config tests/config/jest.config.ts --selectProjects unit",
    "test:integration": "jest --config tests/config/jest.config.ts --selectProjects integration",
    "test:e2e": "jest --config tests/config/jest.config.ts --selectProjects e2e",
    "test:watch": "jest --config tests/config/jest.config.ts --watch",
    "test:coverage": "jest --config tests/config/jest.config.ts --coverage",
    "test:coverage:unit": "jest --config tests/config/jest.config.ts --selectProjects unit --coverage",
    "test:coverage:integration": "jest --config tests/config/jest.config.ts --selectProjects integration --coverage",
    "test:ci": "jest --config tests/config/jest.config.ts --ci --coverage --watchAll=false",
    "test:debug": "jest --config tests/config/jest.config.ts --runInBand --detectOpenHandles",
    "test:performance": "jest --config tests/config/jest.config.ts tests/performance --runInBand",
    "test:security": "jest --config tests/config/jest.config.ts tests/security --runInBand",
    "test:legacy": "jest --config jest.config.js",
    "test:real": "jest --config tests/config/jest.realEnvironment.config.ts",
    "test:real:verbose": "jest --config tests/config/jest.realEnvironment.config.ts --verbose",
    "test:real:watch": "jest --config tests/config/jest.realEnvironment.config.ts --watch",
    "test:real:debug": "jest --config tests/config/jest.realEnvironment.config.ts --runInBand --detectOpenHandles --verbose",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
    "clean": "rm -rf dist coverage tests/reports",
    "clean:tests": "rm -rf tests/reports coverage",
    "prebuild": "npm run clean",
    "pretest": "npm run clean:tests",
    "docker:build": "docker build -t enhanced-mcp-slack-sdk .",
    "docker:run": "docker run -p 3000:3000 enhanced-mcp-slack-sdk",
    "docker:test": "docker run --rm -v $(pwd):/app -w /app node:18-alpine npm test",
    "validate:env": "node -e \"require('dotenv').config(); console.log('Environment validated')\"",
    "setup:test": "npm run validate:env && echo 'Test environment ready'",
    "report:coverage": "open tests/reports/coverage/lcov-report/index.html",
    "report:tests": "open tests/reports/html/test-report.html",
    "start:prod": "node scripts/start-production.js",
    "deploy": "./scripts/deploy-now.sh"
  },
  "keywords": [
    "slack",
    "mcp",
    "model-context-protocol",
    "sdk",
    "typescript",
    "ai",
    "automation",
    "testing",
    "integration"
  ],
  "author": "Enhanced MCP Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@slack/bolt": "^3.21.4",
    "@slack/types": "^2.12.0",
    "@slack/web-api": "^7.5.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "form-data": "^4.0.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/form-data": "^2.5.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@types/node-fetch": "^2.6.11",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "resolve-cwd": "^3.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/enhanced-mcp-slack-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/enhanced-mcp-slack-sdk/issues"
  },
  "homepage": "https://github.com/your-org/enhanced-mcp-slack-sdk#readme",
  "jest": {
    "projects": [
      "<rootDir>/tests/config/jest.config.ts"
    ]
  }
}
