{
  "name": "enhanced-mcp-slack-sdk",
  "version": "2.0.0",
  "description": "Enhanced MCP Slack SDK v2.0.0 - Production-ready Slack integration with comprehensive toolset",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "docker:build": "docker build -t enhanced-mcp-slack-sdk .",
    "docker:run": "docker run -p 3000:3000 enhanced-mcp-slack-sdk"
  },
  "keywords": [
    "slack",
    "mcp",
    "model-context-protocol",
    "sdk",
    "typescript",
    "ai",
    "automation"
  ],
  "author": "Enhanced MCP Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@slack/bolt": "^3.21.4",
    "@slack/types": "^2.12.0",
    "@slack/web-api": "^7.5.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "form-data": "^4.0.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/form-data": "^2.5.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@types/node-fetch": "^2.6.11",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "resolve-cwd": "^3.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
